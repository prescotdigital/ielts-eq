generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

enum EventType {
  LOGIN
  TEST_START
  TEST_COMPLETE
  VOCAB_PRACTICE
  PRONUNCIATION_PRACTICE
}

model User {
  id                String                  @id @default(cuid())
  name              String?
  email             String                  @unique
  password          String?                 // Hashed password for credentials auth
  emailVerified     DateTime?
  image             String?
  role              UserRole                @default(USER)
  lastActiveAt      DateTime?
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  accounts          Account[]
  sessions          Session[]
  testSessions      TestSession[]
  questionUsage     QuestionUsage[]
  flashcardProgress UserFlashcardProgress[]
  pronunciationProgress UserPronunciationProgress[]
  subscriptions     Subscription[]
  analyticsEvents   AnalyticsEvent[]
  loginAttempts     LoginAttempt[]
}

model Subscription {
  id        String             @id @default(cuid())
  userId    String
  user      User               @relation(fields: [userId], references: [id])
  status    SubscriptionStatus @default(ACTIVE)
  planId    String             // e.g., "monthly_pro"
  amount    Float              // For PNL calculation
  currency  String             @default("USD")
  startDate DateTime           @default(now())
  endDate   DateTime?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model AnalyticsEvent {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  type      EventType
  metadata  Json?     // Extra details (e.g., drill ID, score)
  createdAt DateTime  @default(now())

  @@index([type, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum TestStatus {
  STARTED
  COMPLETED
}

model TestSession {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  date        DateTime   @default(now())
  status      String     @default("IN_PROGRESS") // "IN_PROGRESS", "COMPLETED"
  score       Float?
  analysis    String?    @db.Text // Store holistic analysis JSON with sub_scores
  completedAt DateTime?
  responses   Response[]

  @@index([userId])
}

model Question {
  id          String          @id @default(cuid())
  text        String
  part        Int // 1, 2, or 3
  category    String          @default("General") // e.g., "Work", "Hometown", "Person", "Technology"
  subcategory String? // Optional, e.g., "Mobile Phones" under "Technology"
  themeGroup  String? // Links Part 2 and Part 3 questions (e.g., "events", "technology", "people")
  difficulty  String          @default("medium") // "easy", "medium", "hard"
  tags        String[] // Array of tags for flexible filtering
  createdAt   DateTime        @default(now())
  responses   Response[]
  usedBy      QuestionUsage[]
}

model Response {
  id         String      @id @default(cuid())
  sessionId  String
  session    TestSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  questionId String
  question   Question    @relation(fields: [questionId], references: [id])
  audioUrl   String
  transcript String?
  feedback   String?     @db.Text // Store JSON feedback as text
  score      Float?
  createdAt  DateTime    @default(now())
}

model QuestionUsage {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  usedAt     DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
  @@index([userId])
  @@index([questionId])
}

model Flashcard {
  id           String   @id @default(cuid())
  word         String   @unique
  definition   String   @db.Text
  example      String   @db.Text
  partOfSpeech String
  sublist      Int // AWL sublist 1-10 (1 = most frequent)
  createdAt    DateTime @default(now())

  userProgress UserFlashcardProgress[]

  @@index([sublist])
}

model UserFlashcardProgress {
  id           String   @id @default(cuid())
  userId       String
  flashcardId  String
  familiarity  Int      @default(0) // 0=new, 1=learning, 2=familiar, 3=mastered
  lastReviewed DateTime @default(now())
  reviewCount  Int      @default(0)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  flashcard Flashcard @relation(fields: [flashcardId], references: [id], onDelete: Cascade)

  @@unique([userId, flashcardId])
  @@index([userId])
  @@index([familiarity])
  @@index([lastReviewed])
}

model PronunciationDrill {
  id             String   @id @default(cuid())
  phoneme        String   // e.g., "th-unvoiced", "r", "l"
  label          String   // e.g., "The 'th' Sound"
  description    String
  mouthImageUrl  String?
  
  // Content
  words          String[] // Array of practice words
  sentences      String[] // Array of practice sentences/tongue twisters
  
  order          Int      @default(0)
  
  userProgress   UserPronunciationProgress[]
}

model UserPronunciationProgress {
  id             String   @id @default(cuid())
  userId         String
  drillId        String
  score          Int      @default(0) // 0-100 based on success rate
  completed      Boolean  @default(false)
  attempts       Int      @default(0)
  lastAttempt    DateTime @default(now())
  
  user           User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  drill          PronunciationDrill @relation(fields: [drillId], references: [id], onDelete: Cascade)
  
  @@unique([userId, drillId])
}

model LoginAttempt {
  id        String   @id @default(cuid())
  email     String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  provider  String   // "google", "credentials"
  success   Boolean
  error     String?  // Error code: "OAuthAccountNotLinked", "CredentialsSignin", etc.
  ip        String?  // IP address
  userAgent String?  // Browser/device info
  
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([userId])
  @@index([createdAt])
}
